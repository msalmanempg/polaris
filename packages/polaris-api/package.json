{
  "name": "polaris-api",
  "version": "0.0.0",
  "description": "Zameen Developments CRM API",
  "main": "index.js",
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register src/server.ts",
    "ext": "ts, js"
  },
  "scripts": {
    "build": "yarn ttsc -p tsconfig.app.json",
    "start": "yarn build && node dist/server.js",
    "watch": "yarn ttsc -p tsconfig.app.json -w",
    "dev": "yarn build && nodemon --inspect --watch 'src/**/*' --exec node dist/server.js",
    "lint": "eslint --ext .js,.ts ./",
    "lint:errors": "eslint --quiet --ext .js,.ts ./",
    "lint:fix": "yarn lint --fix",
    "lint:types": "ttsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@polaris/domain": "1.0.0",
    "aws-sdk": "^2.863.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "child_process": "^1.0.2",
    "compression": "^1.7.4",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "exceljs": "^4.2.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "http-status-codes": "^2.1.4",
    "injection-js": "^2.4.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-connect": "^12.0.2",
    "libphonenumber-js": "^1.9.11",
    "mime-types": "^2.1.29",
    "morgan": "^1.10.0",
    "qs": "^6.9.6",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/convict": "^5.2.2",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-session": "^1.17.3",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mime-types": "^2.1.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint-plugin-unicorn": "^28.0.2",
    "express-validator": "^6.10.0",
    "faker": "^5.1.0",
    "jest": "^26.6.3",
    "mockdate": "^3.0.2",
    "multer": "^1.4.2",
    "nodemon": "^2.0.6",
    "prisma": "^2.18.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3"
  }
}
