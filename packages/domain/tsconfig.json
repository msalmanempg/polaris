{
  "include": ["src/**/*", "tests/**/*", "types/*"],
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }],
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "mocks/*": ["tests/mocks/*"]
    }
  }
}
